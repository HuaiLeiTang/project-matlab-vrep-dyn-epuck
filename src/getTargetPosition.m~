function [  tar_pos tar_idx ] = getTargetPosition( tar_positions, d_tar, tar_nbr, tar_idx)
% get the target positions and switch between them during simulation 

% % target threshold
d_th=0.01; % m

% select one of the targets
if (d_tar<= d_th)
    tar_pos = tar_positions(tar_nbr(tar_idx),:);
    tar_idx=tar_idx+1;

end





end

